<div class="container">
    <div class="row">
        <!-- Form -->
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" placeholder="Titulo Tarea" class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description" cols="80" class="form-control"
                                placeholder="Descripcion"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Agregar</button>
                    </form>
                </div>
            </div>
        </div>
        <!-- List -->
        <div class="col-md-7">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>NÂº</th>
                        <th>Titulo</th>
                        <th>Descripcion</th>
                        <th>Operacion</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(var i= 0; i < tasks.length; i++){ %>
                    <tr>
                        <td><%= i + 1 %></td>
                        <td><%= tasks[i].title %></td>
                            <td><%= tasks[i].description %></td>
                            <td>
                                <a href="/done/<%= tasks[i]._id %>" 
                                    class="btn <%= tasks[i].status ? 'btn-success' : 'btn-dark' %>">
                                    Hecho
                                </a>
                                <a href="/delete/<%= tasks[i]._id %>" class="btn btn-danger">Eliminar</a>
                                <a href="/update/<%= tasks[i]._id %>" class="btn btn-info">Editar</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('partials/_footer') %>