<%- include('partials/_header') %>

<div class="container">
    <div class="row">
        <!-- Form -->
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%= taskAux._id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="title" value="<%=taskAux.title%>" placeholder="Titulo Tarea"
                                class="form-control">
                        </div>
                        <div class="form-group">
                            <textarea name="description" cols="80" class="form-control"
                                placeholder="Descripcion"><%=taskAux.description%></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block">Editar</button>
                        <a href="/" class="btn btn-danger btn-block">Volver</a>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <%- include('partials/_footer') %>